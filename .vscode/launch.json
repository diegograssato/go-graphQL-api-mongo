{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/cmd/api-server/server.go",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Go into Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "cwd": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "apiVersion": 2,
            "trace": "verbose"
        }
    ]
}